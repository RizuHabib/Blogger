<li id="post-<%=p.id%>">
           <p><%= p.content %></p>
           <p><%= p.user.email %> </p>
           <img src="<%= p.avatar %>">

           <p><sub>
              <% if user_signed_in? %>
                <div id="like-post-<%=p.id %>" >
                   <%=  render 'likes/like' ,  p: p %>
                   <%= p.likes.length %>
                 </div>  
              <% end %>

           </sub></p>



            <% if user_signed_in? && p.user.id ==  current_user.id  %>
                 <p><%= link_to "DELETE POST"  ,  destroy_post_path(p) , remote: true , method: :delete %></p>	
             <% end %>  



           <div>
             <%= render 'comments/post_comment' , p: p %>     
          </div> 






</li>